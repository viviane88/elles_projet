{% extends 'baseAdmin.html.twig' %}

{% block title %}Réinitialiser le mot  de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<div class="container mt-5 col-6">
		<a href="javascript:history.go(-1)" class="h2 m-1" ><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg></a>
            <h1>Réinitialiser le mot  de passe</h1>


        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Merci de renseigner votre mot de passe, un lien sera envoyé pour la réinitialisation.
            </small>
        </div>

           <button  id="search_button" type="submit" class="mt-2">Envoyer</button>
  

    {{ form_end(requestForm) }}
   <div class="p-0 m-0 mt-3 col-12">
	    <a href="{{path('home')}}"  class="" ><b>Retour à l'accueil<b></a>
    </div>

   
    
</div>
{% endblock %}