{% block body %}
{{parent()}}
     	
<div class="col-6 p-5">
		<h2>Modifier  vos informations</h2>
			<a href="javascript:history.go(-1)" class="h2 m-1" >
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
            </svg> 
            </a>

				{{ form_start(formulaireInfo) }}

		<div class="">
			    {{ form_row(formulaireInfo.name) }}
       </div>

       <div class="">
			    {{ form_row(formulaireInfo.firstname) }}
       </div> 

       <div class="">
			    {{ form_row(formulaireInfo.address) }}
       </div> 

       <div class="">
			{{ form_row(formulaireInfo.job, {
			    label: 'Votre job actuel'
			}) }}
