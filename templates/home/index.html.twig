{% extends 'base.html.twig' %}


{% block title %}Accueil{% endblock %}

{% block body %}


	<div class="col-12 text-center m-0 p-0 ">			
		<h1 id="bkg_title">Nos dernières offres d'emploi</h1>
	</div>


	<div class="row mt-5 justify-content-center mx-auto">
 
    {% for jobs in jobs %}

			<div class="col-3  p-4 ">
				<div class="card ">
					<img class="card-img-top" src="" alt="Card image cap">
					<div class="card-body">
						<h5 class="card-title">{{ jobs.title }}</h5>
						<p class="card-text">{{ jobs.description}}</p>
					</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">{{ jobs.company }}</li>
						<li class="list-group-item">{{ jobs.location }}</li>
						<li class="list-group-item">{{ jobs.url }}</li>
						<li class="list-group-item">{{ jobs.uploads}}</li>
					</ul>
					<div class="card-body">
						<a href="#" class="card-link">Aller voir l'annonce</a>
					</div>
				</div>

			</div>

		{% endfor %} 

	<div class="container py-5">
		<hr style="height: 1px;  background-color: #707070; width: 100%; border: none;">
			<div class="col-12 text-center py-3">
				<h1>Pour vous</h1>
				<p class="h4">Nos articles les plus consultés</p>		
			</div>
	</div>
 

	<div class="row mt-2 justify-content-center mx-auto">
		
		{% for articles in articles %}
			<div class="row mt-3  ">
				<div class="col-3 mr-5 p-4 ">
					<div class="card" style="width: 18rem;">
						<img class="card-img-top" src="..." alt="Card image cap">
							<div class="card-body">
									<h5 class="card-title">{{ articles.title }}</h5>
									<p class="card-text">{{ articles.description}}</p>
							</div>
					</div>
				</div>
			 </div> 
		{% endfor %}  
	</div>
			
<div class="container mt-5">
	<hr style="height: 1px;  background-color: #707070; width: 100%; border: none;">
			<div class="col-12 text-center py-3">
				<h1 class="mb-4">Nos services</h1>
			</div>	
	<div class="card-group mt-4">

  		<div class="card">
			<div class="card-body text-center mt-2">
					<img class="" src="{{ asset('./image/iconeMsg.png') }}" alt="logo" width="60%">
					<h4 class="mt-3" >Newsletter</h4>
					<p class="mt-2">Ne ratez plus rien, inscrivez vous à notre newsletters</p>
					<div class="mt-5 mx-auto" id="button_outset">
				<a href="{{path('app_register')}}"class="" >Inscrivez-vous</a>
				</div>
			</div>
		</div>
		<div class="card">
  			<div class="card-body text-center mt-1">
    			<img class="" src="{{ asset('./image/iconeCompt.png') }}" alt="logo" width="50%">
				<h4 class="mt-2">Mon Compte</h4>
				<p>Créer votre compte et garder vos favoris, postuler directement etc...</p>
				<div class="mt-4 mx-auto" id="button_outset">
				<a href="{{path('app_login')}}"class="" >Connectez-vous</a>
				</div>
   	 		</div>
  		</div>
  		<div class="card">
    		<div class="card-body text-center">
				<img class="" src="{{ asset('./image/iconePhone.png') }}" alt="logo" width="60%">
					<h4 class="">Nous contacter</h4>
					<p>Vous avez une question, une suggestion, n'hésitez pas!</p>
					<div class="mt-5 mx-auto" id="button_outset">
					<a href="{{ path('contact') }}"class="" > Contact</a>
					</div>

			</div>
			</div>
 		<div class="card">
    		<div class="card-body text-center">
				<img class="mt-2" src="{{ asset('./image/iconeGroup.png') }}" alt="logo" width="50%">
					<h4 class="">Nous</h4>
					<p>Découvrir notre concept et ce que nous souhaitons vous apporter.</p>
					<div class="mt-4 mx-auto" id="button_outset">
					<a href=""class="" > Notre concept</a>
					</div>
				</div>
 			</div>
	 	<div class="card">
    		<div class="card-body text-center">
				<img class="" src="{{ asset('./image/iconeWen.png') }}" alt="logo" width="50%">
					<h4 class="mt-4">Rechercher</h4>
					<p class="mt-2">Trouver votre job de rêve par ville, secteurs ou entreprises</p>
					<div class="mt-5 " id="button_outset">
						<a href="{{ path('job') }}"class="" > Nos jobs</a>
	    			</div>

    		</div>
 		</div>
		</div>
</div>


	{# fleche retour top #}
	<div class="container-fluid mt-5">
		<div class="row justify-content-center mb3 pt-2 pr-3 ">
			<a href="#top"><img src="{{ asset('./image/arrowTop.png') }}" alt="icone arrow Top" width="85%" id="arrowTop"></a>
		</div>
	</div>

</div>

{% endblock %}
