{% extends 'baseAdmin.html.twig' %}

{% block title %}Administrateur-Job{% endblock %}

{% block body %}

	{{ parent() }}
 
	<div class="col-10 p-5 mt-3">
		<h2>Création d'un nouvel emploi</h2>

		<div class="col-12 mt-5 p-0 m-0 ">
			<a href="{{ path('job_create') }}" class=" p-3 rounded" style="text-decoration:none; background-color: #E8D525" >Créer votre annonce</a>
		</div>

		<table class="table table-bordered table-hover table-sm text-center mt-5">
			<thead>
				<tr>
					<th scope="col">Titre du poste proposé</th>
					<th scope="col">Nom de l'entreprise</th>
					<th scope="col">Description</th>
					<th scope="col">Adresse de l'entreprise</th>
					<th scope="col">Url de l'entreprise</th>
					<th scope="col">Logo</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>

			<tbody>
			


				{% for job in jobs %}
					<tr>
						<td>{{ job.title }}</td>
						<td>{{ job.company }}</td>
						<td>{{ job.description }}</td>
						<td>{{ job.location }}</td>
						<td>{{ job.url }}</td>

		                <td><img src="{{ asset('image/jobs/' ~ job.uploads) }}" alt="photo principale {{ job.uploads }}"></td>


						<td>
							<a href="{{ path('job_update', {'id':job.id}) }}">
								<svg width="1em" height="1em" viewbox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
									<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
									<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
								</svg>
							</a>
							
							<a href="{{ path('job_delete', {'id':job.id}) }}"class="confirmation">
								<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
									<path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"/>
								</svg>

							</a>
						</td>
					</tr>

				</tbody>
			{% endfor %}
		</table>
        
	</div>
	
	{# fleche retour top #}

	<div class="container-fluid mt-5">
		<div class="row justify-content-center mb3 pt-2 pr-3 ">
			<a href="#top"><img src="{{ asset('./image/arrowTop.png') }}" alt="icone arrow Top" width="85%" id="arrowTop"></a>
		</div>
	</div>

	{# modal de supprression#}

	<script type="text/javascript">
    	var elems = document.getElementsByClassName('confirmation');
    	var confirmIt = function (e) {
		if (!confirm('Etes vous sûr de supprimer définitivement cette annonce?')) e.preventDefault();
			};
			for (var i = 0, l = elems.length; i < l; i++) {
		elems[i].addEventListener('click', confirmIt, false);
			}
	</script>

{% endblock %}
