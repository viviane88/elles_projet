{% extends 'base.html.twig' %}

{% block title %} Jobs{% endblock %}

{% block body %}
               
<!-- navBar -->
  
    {{ include ('nav.html.twig') }}


    <div class="col-12 text-center m-0 p-0 " style=" background-color: #39485E">
		<h1 class="text-white">Tous nos Emplois</h1>
        
	</div>

	<div class="mt-5 text-center p-3 col-8 mx-auto">
				<a href="{{path('job')}}"
				class="mt-3 mb-3 p-3 h4" id="button_outset" >Retour aux recherches</a>
            </div> 

	{% for job in allJob %}
<!-- Card Start -->

		<div class="container";>
   <div id="about_card" class="card card  p-4" style="max-width: 1000px">

 	<div class="container">

	<article class="row single-post no-gutters">	
		 <div class="col-md-12">
			<div class="image-wrapper float-left pr-3">								
				 <img src="{{ asset('image/jobs/' ~ job.uploads) }}" alt="photo principale {{ job.uploads }} " > 
			</div>
			<div class="single-post-content-wrapper ">
					 <div class="col-md-12">

			  <h2 class="" >{{ job.title }}</h2>
			  <h4 class="col-0"><b>{{ job.company }}</b></h4>
			  <p>{{ job.url }}</p>
			  <p>{{ job.location }}</p>
			</div>
						</div>

			<div class=" float-right mt-2 ">
				<a href="{{ path('job_show', {id: job.id}) }}"
				class=" p-3 rounded" style="text-decoration:none; background-color: #E8D525">DÃ©couvrir</a>
	 		</div> 
		 </div>
   </article>
</div>
		 
            
</div>

</div>

</div>

{% endfor %}
	
<!-- pagination -->

<div class="text-center">
    {{ knp_pagination_render(allJob) }}
</div>

{# fleche retour top #}
	<div class="container-fluid mt-5">
		<div class="row justify-content-center mb3 pt-2 pr-3 ">
			<a href="#top"><img src="{{ asset('./image/arrowTop.png') }}" alt="icone arrow Top" width="85%" id="arrowTop"></a>
		</div>
	</div>
	

{% endblock %}