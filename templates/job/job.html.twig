{% extends 'base.html.twig' %}

{% block title %} Jobs{% endblock %}

{% block body %}

    <div class="col-12 text-center py-3 p-0 m-0">
		<h1 id="bkg_title">Nos emplois</h1>
	</div>

	<div class="jumbotron">

		<div class="container">
			{{ form_start(form) }}
			<div class="form-row align-items-end">
				<div class="col">
					{{ form_row(form.company) }}
				</div>
				<div class="col">
					{{ form_row(form.location) }}
				</div>
		</div>
		<div class="col-12">
					<div class="form-group  mt-3 text-center">
	       				 <button  id="search_button" type="submit" class="">Ok</button>
					</div>
				</div>
			{{ form_end(form) }}
		</div>
	</div>
		
 	
	{% for jobs in jobs %}

		<div class="col-12 jumbotron ">

			<div class="container">
				<div class="row ">
					<div class="col-3 bg-warning">
					</div>

					<div class="col-9 bg-info">
					<a href="{{ path('job_show', {'id':jobs.id}) }}"> {{ jobs.title }}</a>

						<div class="row">
							<div class=" bg-danger">{{ jobs.company }}</div>
						</div>

						<div class="container">

							<div class="row mt-5">
								<div class="col  bg-warning">{{ jobs.url }}</div>
								<div class="col bg-success">{{ jobs.location }}</div>
							</div>

						</div>

					</div>
				</div>
			</div>

		</div>

	{% endfor %}

	<div class="container col-2">
   		 {{ knp_pagination_render(jobs) }}
	</div>
	
{% endblock %}
