{% extends 'base.html.twig' %}

{% block title %} Jobs{% endblock %}

{% block body %}
               
<!-- navBar -->
  
    {{ include ('nav.html.twig') }}


    <div class="col-12 text-center m-0 p-0 mb-4 " style=" background-color: #39485E">
		<h1 class="text-white">Nos Emplois</h1>
	</div>
<!-- SearchBar -->


	<div class="container mt-5 p-3"style=" background-color: #39485E" >
		{{ form_start(form) }}
		<div class="form-row align-items-end ">
			<div class="col">
				{{ form_row(form.title) }}
			</div>
			<div class="col">
				{{ form_row(form.location) }}
			</div>

			<div class="col-12 mt-4">
				<div class="form-group  mt-3 text-center">
	       		<button  id="search_button" type="submit" class="">Ok</button>
							</div>

			</div>
		</div>
				{{ form_end(form) }}

	</div>


 {% for job in jobs %}
<!-- Card Start -->

		<div class="container py-3 p-5">
        	<div class="card ">
          		<div class="row ">
            		<div class="col-md-4 p-5">
						<div class="p-2">
							<img class="d-block" width="95%" src="{{ asset('image/jobs/' ~ job.uploads) }}" alt="photo principale {{ job.uploads }} ">
                  		</div> 
            		</div>
      
            	<div class="col-md-7 px-3">
              		<div class="card-block px-6 mt-5">
                		<h4 class="card-title">{{ job.company }}</h4>
                		<h5 class="card-title">{{ job.title }}</h5>

                	<div class="row align-items-center mt-3"> 
                  		<div class="col-6">
                    		{{ job.url }}
                  		</div>
						<div class="col-2">
                    		{{ job.location }}
                  		</div>
                  	
                	</div> 
                <br>
				<div class=" float-right mt-2 ">
                     	<a href="{{ path('job_show', {id: job.id}) }}"
                        class=" p-3 rounded" style="text-decoration:none; background-color: #E8D525">DÃ©couvrir</a>
                </div> 
					
			</div>
			
        </div>
		 
            
</div>

</div>

</div>

{% endfor %}

